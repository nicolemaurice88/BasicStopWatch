<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    android:orientation="vertical"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/sW_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/basic"
        android:text="Basic Stopwatch"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sW_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="#673AB7"
        app:layout_constraintHorizontal_bias="0.0"
        app:srcCompat="@drawable/sw_img" />

    <TextView
        android:id="@+id/begin_text"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/basic"
        android:text="Begin"
        android:textAlignment="center"
        android:textColor="#F7000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/begin_btn"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_gravity="center|center_vertical"
        android:background="#FF9800"
        android:scrollbarDefaultDelayBeforeFade="0"
        app:srcCompat="@mipmap/img_button_3" />

</LinearLayout>